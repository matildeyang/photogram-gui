<h1>Photo Details</h1>

<dl>
  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_photo.image %>" height="300px">
  </dd>

  <dt>
    Caption
  </dt>
  <dd>
    <p>
      <%= @the_photo.caption %>
    </p>
  </dd>

  <dt>
    Owner
  </dt>
  <dd>
    <%= @the_photo.poster.username %>
  </dd>

  <dt>
    Posted
  </dt>
  <dd>
    <%= @the_photo.created_at %>
  </dd>

  <dt>
    Edit photo
  </dt>
  <dd>
    <form action="/update_photo/<%= @the_photo.id %>" method="post">
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="image" placeholder="Enter a URL for the image..." value="<%= @the_photo.image%>">

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="caption" placeholder="Enter a caption for the photo..."><%= @the_photo.caption %></textarea>

      <button>Update photo</button>
    </form>
  </dd>

  <dt>
    Delete photo
  </dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.id %>">
      Delete this photo
    </a>
  </dd>
</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>
      Commenter
    </th>

    <th>
      Comment
    </th>

    <th>
      Posted
    </th>
  </tr>

  <% @the_photo.comments.each do |a_comment| %>
    <tr>
      <td>
        <%= a_comment.commenter.username %>
      </td>

      <td>
        <%= a_comment.body %>
      </td>

      <td>
        <%= a_comment.created_at %>
      </td>
    </tr>
  <% end %>
</table>


<h3> Add a new comment </h3>
<form action="/add_comment">
<label for="the_photo">Photo ID</label>
<input type="text" name="photo_id" id="the_photo" value="<%= @the_photo.id %>">

<label for="the_author">Author ID</label>
<input type="text" name="author_id" id="the_author">

<label for="the_comment">Comment</label>
<input type="text" name="comment" id="the_comment">
<button> Add comment </button>
</form>
